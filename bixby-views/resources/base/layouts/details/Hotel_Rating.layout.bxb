        image {
          url ("/images/icons/rating.png")
          style (Detail_M)
        }
        image {
          url ("/images/icons/half-rating.png")
          style (Detail_M)
        }
      } else-if (rating <= 5.0) {
        image {
          url ("/images/icons/rating.png")
          style (Detail_M)
        }
        image {
